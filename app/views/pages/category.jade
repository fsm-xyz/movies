extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/category")
        input(type='hidden', name='category[_id]', value='#{category._id}')
        .form-group
          label.col-sm-2.control-label(for="inputCatogery") 电影分类
          .col-sm-10
            input#inputTitle.form-control(type="text", name="category[name]", value=category.name)
        .form-group
          label.col-sm-offset-2.col-sm-10
          button.btn.btn-default(type="submit") 录入
